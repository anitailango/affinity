{
  "name": "Affinity",
  "version": "0.1",
  "description": "Affinity Chrome extension test",
  "browser_action": {
    "default_popup": "index.html"
  },
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16":  "favicons/purple16.png",
    "32":  "favicons/purple32.png",
    "48":  "favicons/48.png",
    "128": "favicons/128.png"
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "http://127.0.0.1:8000/"
  ]
}
